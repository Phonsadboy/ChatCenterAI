<!DOCTYPE html>
<html lang="th">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>ตั้งค่าระบบติดตามลูกค้า</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  <link href="/css/style.css" rel="stylesheet">
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container">
      <a class="navbar-brand" href="/admin/dashboard">
        <i class="fas fa-robot"></i> จัดการ AI
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/admin/dashboard">
              <i class="fas fa-tachometer-alt"></i> แดชบอร์ด
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/broadcast">
              <i class="fas fa-bullhorn"></i> บรอดแคสต์
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/chat">
              <i class="fas fa-comments"></i> แชท
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="/admin/followup">
              <i class="fas fa-user-clock"></i> ติดตามลูกค้า
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/followup/status">
              <i class="fas fa-chart-line"></i> สถานะติดตาม
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/settings">
              <i class="fas fa-cogs"></i> ตั้งค่า
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin">
              <i class="fas fa-sign-out-alt"></i> ออกจากระบบ
            </a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="card">
          <div class="card-header">
            <h5 class="mb-0">
              <i class="fas fa-user-clock me-2"></i> ตั้งค่าระบบติดตามลูกค้า
            </h5>
          </div>
          <div class="card-body">
            <% if (typeof error !== 'undefined') { %>
              <div class="alert alert-danger"><%= error %></div>
            <% } %>
            <% if (typeof success !== 'undefined') { %>
              <div class="alert alert-success"><%= success %></div>
            <% } %>

            <form method="POST" action="/admin/followup">
              <!-- เปิด/ปิดระบบ -->
              <div class="mb-4">
                <div class="form-check form-switch">
                  <input class="form-check-input" type="checkbox" id="enabled" name="enabled" 
                         <%= settings.enabled ? 'checked' : '' %>>
                  <label class="form-check-label fw-bold" for="enabled">
                    เปิดใช้งานระบบติดตามลูกค้าที่ยังไม่ซื้อสินค้าตามรอบที่กำหนด
                  </label>
                </div>
                <small class="text-muted">
                  ระบบจะส่งข้อความติดตามไปยังลูกค้าที่ยังไม่ซื้อสินค้าตามรอบที่กำหนด
                </small>
              </div>

              <!-- รอบการติดตาม -->
              <div class="mb-4">
                <label class="form-label fw-bold">รอบการติดตาม</label>
                <div id="followupRounds">
                  <% if (settings.rounds && settings.rounds.length > 0) { %>
                    <% settings.rounds.forEach((round, index) => { %>
                      <div class="round-item border rounded p-3 mb-3">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                          <h6 class="mb-0">รอบที่ <%= index + 1 %></h6>
                          <button type="button" class="btn btn-outline-danger btn-sm" onclick="removeRound(this)">
                            <i class="fas fa-trash"></i> ลบ
                          </button>
                        </div>
                        <div class="row">
                          <div class="col-md-3">
                            <label class="form-label">เวลา (นาที)</label>
                            <input type="number" class="form-control" name="rounds[<%= index %>][minutes]" 
                                   value="<%= round.minutes %>" min="1" required>
                            <small class="text-muted">หลังจากลูกค้าไม่ตอบ</small>
                          </div>
                          <div class="col-md-9">
                            <label class="form-label">ข้อความ</label>
                            <textarea class="form-control" name="rounds[<%= index %>][message]" 
                                      rows="2" required><%= round.message %></textarea>
                          </div>
                        </div>
                      </div>
                    <% }); %>
                  <% } else { %>
                    <div class="round-item border rounded p-3 mb-3">
                      <div class="d-flex justify-content-between align-items-center mb-2">
                        <h6 class="mb-0">รอบที่ 1</h6>
                        <button type="button" class="btn btn-outline-danger btn-sm" onclick="removeRound(this)">
                          <i class="fas fa-trash"></i> ลบ
                        </button>
                      </div>
                      <div class="row">
                        <div class="col-md-3">
                          <label class="form-label">เวลา (นาที)</label>
                          <input type="number" class="form-control" name="rounds[0][minutes]" 
                                 value="30" min="1" required>
                          <small class="text-muted">หลังจากลูกค้าไม่ตอบ</small>
                        </div>
                        <div class="col-md-9">
                          <label class="form-label">ข้อความ</label>
                          <textarea class="form-control" name="rounds[0][message]" 
                                    rows="2" required>สวัสดีครับ มีคำถามเพิ่มเติมเกี่ยวกับเห็ดระโงกไหมครับ?</textarea>
                        </div>
                      </div>
                    </div>
                  <% } %>
                </div>

                <button type="button" class="btn btn-outline-primary" onclick="addRound()">
                  <i class="fas fa-plus me-1"></i> เพิ่มรอบติดตาม
                </button>
              </div>

              <div class="d-flex justify-content-between">
                <a href="/admin/dashboard" class="btn btn-secondary">
                  <i class="fas fa-arrow-left me-1"></i> กลับ
                </a>
                <button type="submit" class="btn btn-primary">
                  <i class="fas fa-save me-1"></i> บันทึกการตั้งค่า
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    let roundCount = <%= settings.rounds ? settings.rounds.length : 1 %>;

    function addRound() {
      const container = document.getElementById('followupRounds');
      const newRound = document.createElement('div');
      newRound.className = 'round-item border rounded p-3 mb-3';
      newRound.innerHTML = `
        <div class="d-flex justify-content-between align-items-center mb-2">
          <h6 class="mb-0">รอบที่ ${roundCount + 1}</h6>
          <button type="button" class="btn btn-outline-danger btn-sm" onclick="removeRound(this)">
            <i class="fas fa-trash"></i> ลบ
          </button>
        </div>
        <div class="row">
          <div class="col-md-3">
            <label class="form-label">เวลา (นาที)</label>
            <input type="number" class="form-control" name="rounds[${roundCount}][minutes]" 
                   value="60" min="1" required>
            <small class="text-muted">หลังจากลูกค้าไม่ตอบ</small>
          </div>
          <div class="col-md-9">
            <label class="form-label">ข้อความ</label>
            <textarea class="form-control" name="rounds[${roundCount}][message]" 
                      rows="2" required>หากสนใจสั่งซื้อเห็ดระโงก สามารถติดต่อเราได้เลยครับ</textarea>
          </div>
        </div>
      `;
      container.appendChild(newRound);
      roundCount++;
      updateRoundNumbers();
    }

    function removeRound(button) {
      const container = document.getElementById('followupRounds');
      if (container.children.length > 1) {
        button.closest('.round-item').remove();
        updateRoundNumbers();
      } else {
        alert('ต้องมีอย่างน้อย 1 รอบติดตาม');
      }
    }

    function updateRoundNumbers() {
      const rounds = document.querySelectorAll('.round-item');
      rounds.forEach((round, index) => {
        const title = round.querySelector('h6');
        title.textContent = `รอบที่ ${index + 1}`;
        
        // Update input names
        const minutesInput = round.querySelector('input[type="number"]');
        const messageInput = round.querySelector('textarea');
        minutesInput.name = `rounds[${index}][minutes]`;
        messageInput.name = `rounds[${index}][message]`;
      });
    }
  </script>
</body>
</html> 