<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ตั้งค่าระบบ - Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
    <link href="/css/admin-settings.css" rel="stylesheet">
</head>
<body>
    <%- include('partials/admin-navbar') %>

    <div class="container-fluid">
        <!-- Header -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center">
                    <h2 class="mb-0">
                        <i class="fas fa-cogs text-primary me-2"></i>
                        ตั้งค่าระบบ
                    </h2>
                    <a href="/admin/dashboard" class="back-button">
                        <i class="fas fa-arrow-left"></i>
                        กลับไปหน้าแอดมิน
                    </a>
                </div>
                <hr>
            </div>
        </div>

        <!-- Alert Messages -->
        <div id="alertContainer"></div>

        <!-- Settings Tabs -->
        <ul class="nav nav-tabs mb-4" id="settingsTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="line-ai-tab" data-bs-toggle="tab" data-bs-target="#line-ai-settings" type="button" role="tab">
                    <i class="fas fa-robot me-2"></i>Bot & AI
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="chat-tab" data-bs-toggle="tab" data-bs-target="#chat-settings" type="button" role="tab">
                    <i class="fas fa-comments me-2"></i>การแชท
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="system-tab" data-bs-toggle="tab" data-bs-target="#system-settings" type="button" role="tab">
                    <i class="fas fa-cog me-2"></i>ระบบ
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="filter-tab" data-bs-toggle="tab" data-bs-target="#filter-settings" type="button" role="tab">
                    <i class="fas fa-shield-alt me-2"></i>ความปลอดภัย
                </button>
            </li>
        </ul>

        <!-- Tab Content -->
        <div class="tab-content" id="settingsTabContent">
            <!-- Line Bot & AI Settings Tab -->
            <%- include('partials/settings/bot-ai') %>

            <!-- Chat Settings Tab -->
            <%- include('partials/settings/chat') %>

            <!-- System Settings Tab -->
            <%- include('partials/settings/system') %>

            <!-- Security Settings Tab -->
            <%- include('partials/settings/security') %>
        </div>
    </div>

    <!-- Modals -->
    <%- include('partials/modals/line-bot-modal') %>
    <%- include('partials/modals/facebook-bot-modal') %>
    <%- include('partials/modals/instructions-modal') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/admin-settings.js"></script>
    <script src="/js/bot-management.js"></script>
    <script src="/js/instructions-management.js"></script>
</body>
</html>
