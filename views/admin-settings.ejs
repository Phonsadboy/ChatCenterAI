                showAlert('กรุณาใส่ข้อความที่ต้องการทดสอบ', 'warning');
                return;
            }

            try {
                const response = await fetch('/api/filter/test', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ message: testMessage })
                });

                if (response.ok) {
